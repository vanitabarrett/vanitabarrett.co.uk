  <body>
    <div class="wrapper">
      <header>
        <a href="/" aria-label="Link to homepage" class="logo">
          <span>V</span><span>B</span>
        </a>

        <nav>
          <a href="/projects">Projects</a>
          <a href="/blog">Blog</a>
        </nav>
      </header>

      <main>
          <img src="/assets/blog-images/{{ id }}.png" class="blog__cover-image" alt="">

          <div class="blog">
            <p class="blog__date">Published {{ published_date | postDate }}</p>
            <h1>{{ name }}</h1>

            <div class="blog__content">
              {{ content | safe }}
            </div>

            <aside class="blog__aside">
